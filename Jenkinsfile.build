pipeline {
    agent any
    stages {
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
                sh 'tar czf dist.tar.gz dist'
               
            }
        }
    }
    post {
        success {
            archiveArtifacts artifacts: 'dist.tar.gz', fingerprint: true
        }
    }
}
